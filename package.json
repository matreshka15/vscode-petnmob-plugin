{
    "name": "pet-extension",
    "displayName": "电子宠物插件",
    "description": "在VS Code中养电子宠物",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.feedPet",
        "onCommand:extension.restPet",
        "onCommand:extension.explorePet",
        "onView:petView"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "petView",
                    "name": "宠物状态",
                    "icon": "media/pet-icon.svg",
                    "when": "true"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.feedPet",
                "title": "喂食宠物"
            },
            {
                "command": "extension.restPet",
                "title": "让宠物休息"
            },
            {
                "command": "extension.explorePet",
                "title": "派遣宠物探险"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "extension.feedPet",
                    "when": "view == petView",
                    "group": "navigation"
                },
                {
                    "command": "extension.restPet",
                    "when": "view == petView",
                    "group": "navigation"
                },
                {
                    "command": "extension.explorePet",
                    "when": "view == petView",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "prepublishOnly": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "eslint": "^8.15.0",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "glob": "^7.2.0",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.3"
    }
}